<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:backgroundTint="@color/colorWhite"
    android:background="?attr/selectableItemBackground"
    android:orientation="horizontal"
    app:strokeWidth="1dp"
    app:strokeColor="@color/cardViewStroke"
    app:cardElevation=".5dp"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25dp">

        <RadioButton
            android:id="@+id/rd_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:gravity="top"
            android:paddingStart="8dp"
            android:textColor="@color/colorBlack"
            android:textSize="12sp"
            tools:text="Sample address, \n sample city, \n india" />

        <ImageView
            android:id="@+id/img_edit_item"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/rd_btn"
            android:layout_alignParentEnd="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:padding="5dp"
            app:tint="@color/colorBlack"
            app:srcCompat="@drawable/vc_edit" />

        <ImageView
            android:id="@+id/img_delete_item"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/rd_btn"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            app:srcCompat="@drawable/vc_remove"
            app:tint="@color/colorBlack" />

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>